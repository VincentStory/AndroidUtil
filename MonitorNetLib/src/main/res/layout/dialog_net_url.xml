<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog_bg">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:text="网络请求链接地址"/>

        <TextView
            android:id="@+id/tv_content"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/crash_tool_bar_color"
            android:textSize="11sp"
            android:text="更改座位布局后，将重新为学生排座"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_no_save"
                android:layout_width="94dp"
                android:layout_height="30dp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:background="@drawable/shape_no_save_r15"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:text="不复制"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_save"
                android:layout_width="94dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/shape_can_save_r15"
                android:textSize="12sp"
                android:text="复制"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
