<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_feed_root_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp">

    <View
        android:id="@+id/view_feed_status"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/green"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_network_feed_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
            android:text="http://www.xxxx.comwww.xxxx.comwww.xxxx.com"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_feed_content_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_network_feed_url"
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            android:text="ContentType: json"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_feed_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_feed_content_type"
            android:textColor="@color/green"
            android:gravity="center"
            android:textSize="14sp"
            android:text="StatusCode: 200"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tv_feed_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:layout_below="@id/tv_feed_status"
            android:textSize="14sp"
            android:text="GET"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_below="@id/tv_feed_content_type"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_feed_cost_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:text="900 ms"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tv_feed_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="15sp"
                android:text="900 KB"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>